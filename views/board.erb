<div id="stage" data-module="board/main" data-parameters='<%= @parameters.to_json %>'>
<div id="drawer" >
  <a href="#toggle-drawer" class="hide  arrow-right toggle-drawer"><span></span></a>
</div>
</div>
<% content_for :navigation do %>

  <li >
  <a href="/<%= h @parameters[:user]%>/<%= h @parameters[:repo]%>/backlog">Backlog</a>
  </li>
  <li class="active">
  <a href="/<%= h @parameters[:user]%>/<%= h @parameters[:repo]%>/board">Tasks</a>
  </li>
  <li class="dropdown">
    <a href="#" class="dropdown-toggle" data-toggle="dropdown">Create a new issue<b class='caret'></b></a>
    <ul class="dropdown-menu">
      <form action="create-issue" method="post">
        <li> <input type="text" id="inputTitle" name="title" placeholder="Title"> </li>
        <li> <input type="text" id="inputBody" name="body" placeholder="Body"> </li>
        <li><input type='submit' value='Send' class='button'></li>
      </form>
    </ul>
  </li>
<% end %>

<% content_for :overlay do %>
  <div class="fullscreen-overlay" >

    <div class="fullscreen-wrapper" data-module="card/main" data-parameters='<%= @parameters.to_json %>'>

    </div>

  </div>

<% end %>
<% content_for :header do %>
  <ol class="assignees">

  </ol>
  <h1 class="header">
    <span class="author"><%= h @parameters[:user] %></span>
    /
    <span class="repo"><%= h @parameters[:repo] %></span>
    <input placeholder="search..."/>
  </h1>

<% end %>
<% content_for :sidebar do %>

  <div class="sidebar-wrapper lifted hide" > </div>
<% end %>

<% content_for :title do %><%= h @parameters[:repo]%> :: <% end %>
